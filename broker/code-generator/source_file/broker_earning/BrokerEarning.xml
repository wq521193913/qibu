<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.broker.dao.BrokerEarningDao">
  <insert id="insertBrokerEarning" parameterType="com.broker.domain.BrokerEarning">INSERT INTO broker_earning(uid,broker_user,earnings_amount,earnings_source,status) VALUES (#{uid},#{broker_user},#{earnings_amount},#{earnings_source},#{status})
    <selectKey resultType="java.lang.Integer" keyProperty="uid" order="AFTER">SELECT LAST_INSERT_ID()</selectKey>
  </insert>
  <update id="updateBrokerEarningById" parameterType="com.broker.domain.BrokerEarning">UPDATE broker_earning
    <set>
      <if test="broker_user!=null">broker_user=#{broker_user},</if>
      <if test="earnings_amount!=null">earnings_amount=#{earnings_amount},</if>
      <if test="earnings_source!=null">earnings_source=#{earnings_source},</if>
      <if test="status!=null">status=#{status},</if>
    </set>where uid = #{uid}
  </update>
  <delete id="deleteBrokerEarning" parameterType="java.lang.Integer">DELETE FROM broker_earning WHERE uid = #{uid}</delete>
  <select id="queryBrokerEarningById" parameterType="java.lang.Integer" resultType="com.broker.domain.BrokerEarning">SELECT * FROM broker_earning WHERE uid = #{uid}</select>
  <select id="queryBrokerEarningList" parameterType="java.util.Map" resultType="com.broker.domain.BrokerEarning">SELECT * FROM broker_earning
    <where>
      <if test="uid!=null">AND uid=#{uid}</if>
      <if test="broker_user!=null">AND broker_user=#{broker_user}</if>
      <if test="earnings_amount!=null">AND earnings_amount=#{earnings_amount}</if>
      <if test="earnings_source!=null">AND earnings_source=#{earnings_source}</if>
      <if test="status!=null">AND status=#{status}</if>
    </where>
  </select>
</mapper>
